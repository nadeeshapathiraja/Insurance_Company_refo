
@{
    ViewBag.Title = "Currency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Currency</h2>*@

<div class="page-header page-header-default">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i><span class="text-semibold">@ViewData["PageTitle"] Currency</span></h4>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            @*<li><a href="/Dashboard/Index"><i class="icon-home2 position-left"></i>Dashboard</a></li>
                <li><a href="/Product/ProductList">Products</a></li>*@
            <li class="active">@ViewData["PageTitle"] Currency</li>
        </ul>
    </div>
</div>

<div class="content" ng-app="IBMSAPP">
    <div ng-controller="CurrencyController" ng-init="init()" ng-cloak>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">

                        <div class="heading-elements">

                        </div>
                    </div>
                    <div class="panel-body">
                        <ng-form name="currencyData" novalidate>
                            <div class="row">
                                <div class="col-md-12">
                                    @*<input type="button" class="btn btn-warning" value="View BusieeUnit List" ng-click="viewBusieeUnitList()" />*@
                                    <input type="button" class="btn btn-danger" value="Add New Currency" ng-click="addNewCurrency()" ng-show="isEditMode" />
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Currency Name</label><span class="error" ng-show="currencyData.inputCurrency.$error.required" style="color:red">&nbsp;*</span>
                                        <input type="text" class="form-control" placeholder="" name="inputCurrency" ng-model="curObj.CurrencyName" ng-required="true" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Currency Code</label><span class="error" ng-show="currencyData.inputCurrencyCode.$error.required" style="color:red">&nbsp;*</span>
                                        <input type="text" class="form-control" placeholder="" name="inputCurrencyCode" ng-model="curObj.CurrencyCode" ng-required="true" />
                                    </div>
                                </div>
                               
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Country</label><span class="error" ng-show="currencyData.inputCompany.$error.required" style="color:red">&nbsp;*</span>
                                        <select name="selectCompany" id="timeZone" class="form-control" ng-model="curObj.CountryID" ng-options="country.CompanyID as country.CountryName for country in availableCountry" ng-required="true">
                                            <option value="">--Select a Company--</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="text-right" ng-show="one">
                                        <button type="button" class="btn btn-primary" ng-disabled="!businessData.$valid" ng-click="addBusinessUnit()">Add BusinessUnit<i class="icon-arrow-right14 position-right"></i></button>
                                    </div>
                                    <div class="text-right" ng-show="!one">
                                        <button type="button" class="btn btn-primary" ng-disabled="!businessData.$valid" ng-click="updateBU()">Edit Company<i class="icon-arrow-right14 position-right"></i></button>
                                    </div>

                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div ui-grid="gridOptionsBusinessUnit" ui-grid-pagination class="grid" ui-grid-auto-resize></div>
                                </div>
                            </div>
                        </ng-form>
                    </div>
                </div>
            </div>

        </div>
        <div id="divLoading" ng-show="showLoader"></div>
    </div>
</div>