
@{
    ViewBag.Title = "Partner";
    Layout = "~/Views/Shared/_index.cshtml";
}

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Content/lib/ui-grid.js"></script>
<script src="~/Scripts/ng/IBMSApp.js"></script>
<script src="~/Scripts/ng/Services/PartnerService.js"></script>
<script src="~/Scripts/ng/Controllers/PartnerController.js"></script>

<div ng-app="IBMSAPP" ng-controller="PartnerController" ng-init="init()" ng-cloak>

    <div class="page-content-wrap">

        <div class="panel panel-default tabs">
            <ul class="nav nav-tabs" role="tablist">
                <li class="active"><a href="#tab-first" role="tab" data-toggle="tab">View</a></li>
                <li><a href="#tab-second" role="tab" data-toggle="tab">New</a></li>
            </ul>
            <div class="panel-body tab-content">
                <div class="tab-pane active" id="tab-first">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                <input type="text" style="font-size: 12px;width: 100%;border-radius: 0px;margin-right:2px;" class="form-control" placeholder="Search Partner..." ng-model="search_query">
                            </h3>
                            <ul class="panel-controls">
                                <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
                                <li><a href="#" class="panel-refresh" ng-click="refresh()"><span class="fa fa-refresh"></span></a></li>
                                <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-body">

                        <table class="table .table-striped">
                            <thead>
                                <tr>
                                    <th>Partner Name</th>
                                    <th>Action</th>
                                    @*<th>Setting Code</th>
                                        <th>Setting Description</th>*@
                                </tr>
                            </thead>

                            <tbody ng-repeat="Partner in Pats| filter:search_query">
                                <!--<tr  >-->
                                <tr id="view{{Partner.PartnerID}}">

                                    <td>{{Partner.PartnerName}}</td>
                                    @*<td>{{Setting.SettingCode}}</td>
                                        <td>{{Setting.SettingDescription}}</td>*@
                                    <td>
                                        <button class="fa fa-edit btn-sm btn-success" ng-click="edit(Partner)"></button>&nbsp;&nbsp;
                                        <button class="fa fa-trash-o btn-sm btn-danger" ng-click="Delete(Partner,Partners,$index)"></button>
                                    </td>
                                </tr>

                                <tr id="edit{{Partner.PartnerID}}" hidden>
                                    <td hidden>
                                        <input type="text" hidden class="form-control"
                                               value="{{Partner.PartnerID}}"
                                               ng-model="Partner.PartnerID">
                                    </td>
                                    <td>
                                        <input type="text" style="font-size: 12px;width: 100%;border-radius: 0px;margin-right:2px;" class="form-control"
                                               value="{{Partner.PartnerName}}"
                                               ng-model="Partner.PartnerName">
                                    </td>

                                    @*<td>
                                            <input type="text" style="font-size: 12px;width: 100%;border-radius: 0px;margin-right:2px;" class="form-control"
                                                   value="{{Setting.SettingCode}}"
                                                   ng-model="Setting.SettingCode">
                                        </td>
                                        <td>
                                            <input type="text" style="font-size: 12px;width: 100%;border-radius: 0px;margin-right:2px;" class="form-control"
                                                   value="{{Setting.SettingDescription}}"
                                                   ng-model="Setting.SettingDescription">
                                        </td>*@
                                    <td>
                                        <button class="fa fa-save btn-sm btn-info" ng-click="update(Partner)"></button>&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button ng-click="cancel(Partner)" class="fa fa-times btn-sm btn-default"></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="tab-pane" id="tab-second">

                    <form class="form-horizontal col-md-10" role="form">
                        @*<div class="form-group">
                                <label class="col-md-4 control-label">Designation ID</label>
                                <div class="col-md-8">
                                    <select class="form-control" ng-model="DesignationID">
                                        <option ng-repeat="Set in gridOptionsDesignation"
                                                value="{{Set.DesignationID}}">
                                            {{Set.DesignationName}}
                                        </option>

                                    </select>
                                </div>
                            </div>*@

                        <div class="form-group">
                            <label class="col-md-4 control-label">Partner Name</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model="PartnerName" />
                            </div>
                        </div>
                        @*<div class="form-group">
                                <label class="col-md-4 control-label">Setting Description</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" ng-model="SettingDesc" />
                                </div>
                            </div>*@
                        <div class="panel-footer">
                            <button class="btn btn-primary pull-right" ng-click="Save()">Save Changes <span class="fa fa-floppy-o fa-right"></span></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
